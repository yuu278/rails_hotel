<h1>プロフィール編集</h1>

<%= form_with model: current_user, url: profile_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :icon, "アイコン画像" %>
    <%= f.file_field :icon, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :self_introduction, "自己紹介" %>
    <%= f.text_area :self_introduction, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "更新", class: 'btn btn-primary' %>
  </div>
<% end %>
