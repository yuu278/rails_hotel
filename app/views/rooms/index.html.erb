<h1>宿泊施設一覧</h1>

<div class="rooms">
  <% @rooms.each do |room| %>
    <div class="room">
      <% if room.image.attached? %>
        <%= image_tag room.image, alt: room.image, class: "room-image" %>
      <% else %>
        <%= image_tag "facility_image.png", alt: "デフォルト画像", class: "room-image" %>
      <% end %>
      
      <h2><%= link_to room.name, room_path(room) %></h2>
      <p><%= room.description %></p>
      <p>宿泊料金: ¥<%= room.price %>/日</p>
      <p>住所: <%= room.address %></p>
      <p>作成日: <%= room.created_at.strftime("%Y/%m/%d") %></p>
    </div>
  <% end %>
</div>